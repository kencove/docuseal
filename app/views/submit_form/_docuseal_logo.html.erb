<% logo_url = @submitter&.account&.account_configs&.find_by(key: AccountConfig::COMPANY_LOGO_URL_KEY)&.value %>
<a href="<%= root_path %>" class="mx-auto text-2xl md:text-3xl font-bold items-center flex space-x-3">
  <% if logo_url.present? %>
    <img src="<%= logo_url %>" alt="<%= @submitter.account.name %>" class="max-h-12 max-w-48 object-contain" />
  <% else %>
    <%= render 'shared/logo', class: 'w-9 h-9 md:w-12 md:h-12' %>
    <span><%= Docuseal.product_name %></span>
  <% end %>
</a>
